<% title "编辑用户" %>
<fieldset>
  <% form_for(@user) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :login,"帐号" %><br />
      <%= f.text_field :login,:disabled => true  %>
    </p>
    <p>
      <%= f.label :email,"邮箱" %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :roles,"角色" %><br />
      <%= f.select :roles, [['维客','wikier'],['秩序守护者','peace_maker'],['违逆天意之人','providence_breaker']], {:include_blank=>"请选择",:selected => 0} %>
    </p>
    <p>
      <%= f.submit "更新" %>
    </p>
  <% end %>
</fieldset>
<%= link_to "返回",url_for(:back) %>