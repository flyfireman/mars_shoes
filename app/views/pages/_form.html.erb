<% form_for @page do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 60 %>
  </p>

  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body,:class => "mceEditor",:rows =>20, :cols =>60 %>
  </p>

  <p><%= f.submit %></p>
<% end %>
